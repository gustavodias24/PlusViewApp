<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        tools:context=".fragments.Assistir"
        android:theme="@style/Theme.Constelação">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Vídeos para assistir e ganhar moedas"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressSemVideo2"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textSemVideo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Nenhum vídeo cadastrado no App ainda, seja o primeiro a cadastrar!"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerVideos"
                android:layout_width="match_parent"
                android:layout_height="852dp"
                android:padding="8dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>