<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_width="400px"
            android:layout_height="200px"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_monetization_on_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Título produto"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="Descricao do produto bla bla bla"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/priceProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preço: R$ 00.00"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="bold" />

            <Button
                android:id="@+id/maisInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/purple_500"
                android:padding="8dp"
                android:text="Saber mais"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>